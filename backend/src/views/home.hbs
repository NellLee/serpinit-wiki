<!DOCTYPE html>
<html>

  <header class="header">
    <h1 class="logo">Fantasy World Wiki</h1>
    <nav class="navigation">
      <ul class="nav-list">
        <li class="nav-item"><a href="#">Home</a></li>
        <li class="nav-item"><a href="#">Characters</a></li>
        <li class="nav-item"><a href="#">Locations</a></li>
        <li class="nav-item"><a href="#">Creatures</a></li>
      </ul>
    </nav>
  </header>
  <main class="main-content">
    <section class="featured-article">
      <h2 class="section-title">Featured Article</h2>
      <article class="article">
        <h3 class="article-title">{{ featuredArticle.title }}</h3>
        <p class="article-content">{{ featuredArticle.content }}</p>
      </article>
    </section>
    <section class="recent-updates">
      <h2 class="section-title">Recent Updates</h2>
      <ul class="update-list">
        {{#each recentUpdates}}
          <li class="update-item">{{ this }}</li>
        {{/each}}
      </ul>
    </section>
  </main>
  <footer class="footer">
    <p class="footer-text">&copy; 2023 Fantasy World Wiki</p>
  </footer>
</body>
</html>
